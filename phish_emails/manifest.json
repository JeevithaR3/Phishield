{
  "manifest_version": 3,
  "name": "Email Phishing Detector",
  "version": "1.0",
  "description": "Detect phishing emails in Gmail using JavaScript rules.",
  "permissions": ["activeTab"],
  "host_permissions": ["https://mail.google.com/*"],
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
